<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo base para cards -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/elevation_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Estilo para botones principales -->
    <style name="ButtonPrimaryStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:elevation">@dimen/elevation_small</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo para botones secundarios -->
    <style name="ButtonSecondaryStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accent_orange</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:elevation">@dimen/elevation_small</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo para títulos -->
    <style name="TitleStyle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/primary_blue_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <!-- Estilo para subtítulos -->
    <style name="SubtitleStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <!-- Estilo para texto descriptivo -->
    <style name="DescriptionStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/medium_gray</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
</resources>